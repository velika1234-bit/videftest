rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    // Админ достъп: master UID или profile с role/accessLevel = admin
    function hasAdminProfileIn(appId) {
      return isSignedIn()
             && exists(/databases/$(database)/documents/artifacts/$(appId)/users/$(request.auth.uid)/settings/profile)
             && (
               get(/databases/$(database)/documents/artifacts/$(appId)/users/$(request.auth.uid)/settings/profile).data.accessLevel == 'admin'
               || get(/databases/$(database)/documents/artifacts/$(appId)/users/$(request.auth.uid)/settings/profile).data.role == 'admin'
             );
    }

    function hasAdminProfile() {
      return hasAdminProfileIn('videoquiz-ultimate-live') || hasAdminProfileIn('videoquiz-ultimate');
    }

    function isAdmin() {
      return isSignedIn() && (request.auth.uid == 'uNdGTBsgatZX4uOPTZqKG9qLJVZ2' || hasAdminProfile());
    }

    match /artifacts/{appId} {
      allow read, write: if false;

      match /users/{userId}/settings/profile {
        allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      }

      match /public/data/{document=**} {
        allow read: if appId in ['videoquiz-ultimate-live', 'videoquiz-ultimate'];
        allow write: if appId in ['videoquiz-ultimate-live', 'videoquiz-ultimate'] && isSignedIn();
      }

      match /users/{userId}/{document=**} {
        allow read, write: if appId in ['videoquiz-ultimate-live', 'videoquiz-ultimate']
                           && isSignedIn()
                           && (request.auth.uid == userId || isAdmin());
      }

      match /users/{teacherId}/solo_results/{resultId} {
        allow create: if appId in ['videoquiz-ultimate-live', 'videoquiz-ultimate'] && isSignedIn();
        allow read, update, delete: if appId in ['videoquiz-ultimate-live', 'videoquiz-ultimate']
                                    && isSignedIn()
                                    && (request.auth.uid == teacherId || isAdmin());
      }
    }
  }
}
